{% extends "::base.html.twig" %}

{% block title %}Get Deal{% endblock %}
{% block header_js %}{% endblock header_js %}

{% block body %}
	<div class="hed-main">
		<div class="container">
			<span class="logo"><a href="" >Boowk.com</a></span>
		</div>
	</div>
	<div class="container">
		<div class=" top-space-all"></div>
		<div class="row">
			<div class="contener-parts">
				<div class="col-xs-12">
					<div class="info-tit"><i class="fa fa-info-circle"></i> Enquiry Form </div>
				</div>
				<div class="col-xs-12">
					<div class="deal-filters forms-det">
						{{ form_start(form, {'attr': {'novalidate':'true'}}) }}
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Destination *</label>
										<input type="text" placeholder="" class="form-control" value = "{{ (selectedCriteria.destination) ? selectedCriteria.destination : '' }}" disabled>
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Departure Airport *</label>
										<input type="text" placeholder="" class="form-control" value = "{{ (selectedCriteria.departureAirport) ? selectedCriteria.departureAirport : '' }}" disabled>
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Number of Nights *</label>
										<input type="text" placeholder="" class="form-control" value = "{{ (selectedCriteria.noOfNights) ? selectedCriteria.noOfNights : '' }}" disabled>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Price *</label>
										<input type="text" placeholder="" class="form-control" value = "{{ (selectedCriteria.price) ? selectedCriteria.price : '' }}" disabled>
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Preferred Departure Date *</label>
										{{ form_widget(form.departureDate, { 'attr': {'placeholder': 'mm/dd/yyyy', 'class': 'form-control', 'value': selectedCriteria.departureDate | date('d-m-Y'), 'readonly': 'readonly' } }) }}
										{{ form_errors(form.departureDate) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Customer 1 - First Name*</label>
										{{ form_widget(form.cust1FName, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust1FName) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Customer 1 - Last Name*</label>
										{{ form_widget(form.cust1LName, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust1LName) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Customer 1 - Date of Birth*</label>
										{{ form_widget(form.cust1dob, { 'attr': {'placeholder': 'mm/dd/yyyy', 'class': 'form-control datepicker'} }) }}
										{{ form_errors(form.cust1dob) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Customer 2 - First Name*</label>
										{{ form_widget(form.cust2FName, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust2FName) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Customer 2 - Last Name*</label>
										{{ form_widget(form.cust2LName, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust2LName) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Customer 2 - Date of Birth*</label>
										{{ form_widget(form.cust2dob, { 'attr': {'placeholder': 'mm/dd/yyyy', 'class': 'form-control datepicker'} }) }}
										{{ form_errors(form.cust2dob) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Phone Number*</label>
										{{ form_widget(form.phone, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.phone) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Email*</label>
										{{ form_widget(form.email, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.email) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-sm-12 col-xs-12">
									<div class="form-group">
										<label>Select the time that you would prefer an advisor to call you back on. </label>
										{{ form_widget(form.prefferedCallTime, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.prefferedCallTime) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Address Line 1*</label>
										{{ form_widget(form.address1, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.address1) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Address Line 2*</label>
										{{ form_widget(form.address2, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.address2) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>City*</label>
										{{ form_widget(form.city, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.city) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>State / Province / Region*</label>
										{{ form_widget(form.state, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.state) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Postal / Zip Code</label>
										{{ form_widget(form.zipcode, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.zipcode) }}
									</div>
								</div>
								<div class="col-md-4 col-sm-6 col-xs-12">
									<div class="form-group">
										<label>Country</label>
										{{ form_widget(form.country, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.country) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-sm-12 col-xs-12">
									<div class="form-group">
										<label>Groupon Voucher Security Code for Customer 1 *</label>
										{{ form_widget(form.cust1GroupOnCode, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust1GroupOnCode) }}
									</div>
								</div>
								<div class="col-md-6 col-sm-12 col-xs-12">
									<div class="form-group">
										<label>Groupon Voucher Security Code for Customer 2 *</label>
										{{ form_widget(form.cust2GroupOnCode, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust2GroupOnCode) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-sm-12 col-xs-12">
									<div class="form-group">
										<label>Customer 1: Please upload and save your Groupon Voucher here:</label>
										{{ form_widget(form.cust1GroupOnCodeFile, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust1GroupOnCodeFile) }}
									</div>
								</div>
								<div class="col-md-6 col-sm-12 col-xs-12">
									<div class="form-group">
										<label>Customer 2: Please upload and save your Groupon Voucher here:</label>
										{{ form_widget(form.cust2GroupOnCodeFile, { 'attr': {'placeholder': '', 'class': 'form-control'} }) }}
										{{ form_errors(form.cust2GroupOnCodeFile) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 col-sm-12 col-xs-12">
									<div class="form-group">
										<label>
											I agree - By completing this form and clicking the 'I agree' button, I hereby consent to the provision of my personal details for the purpose of booking and redeeming my Vouchers at Travel Provider. <br><br>
											I understand that Travel Provider act in accordance with the Data Protection Act 1998 (the “Act”).<br><br>
											I also understand that the information I have given to Travel Provider will be held in accordance with the Data Protection Act 1998 but may also be made available to Insurers and other concerned parties in the event of any injury or accident. * *
										</label>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 col-sm-12 col-xs-12">
									<div class="form-group">
										<div class="departure_airport">
											<div class="all-checkbox">
												{{ form_widget(form.terms, { 'attr': {'placeholder': '', 'class': 'css-checkbox'} }) }}
												<label for="iatbundle_inquiry_terms" class="css-label">I agree</label>
												{{ form_errors(form.terms) }}
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 col-sm-12 col-xs-12">
									<div class="form-group submit-btn">
										<input id="" name="saveForm" class="btn btn-default" type="submit" value="Submit" > <!-- data-toggle="modal" data-target="#myModal"> -->
									</div>
								</div>
							</div>
							<div class = 'hidden'>
								{{ form_rest(form, {'display': 'hidden'}) }}
							</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="footer-main">
		<div class="container">
		
		</div>
	</div>
	<div id="myModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<div  class="thank-you-sm">
						<span><i class="fa fa-smile-o"></i> </span>
						thank you
					</div>
				</div>
				<div class="modal-footer">
					{# <button type="button" data-url = "{{ path('iatbundle_front_showDeal', {'dealLink': selectedCriteria['dealLink']}) }}" class="btn btn-primary js-redirect-to-deal-page">Redirect To Deal Page</button> #}
					<a href = "{{ path('iatbundle_front_showDeal', {'dealLink': selectedCriteria['dealLink']}) }}" class="btn btn-primary">Redirect To Deal Page</a>
					<button type="button" class="btn btn-default js-redirect-to-deal-page" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
{% endblock body %}

{% block javascripts %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	{% javascripts '@IATBundle/Resources/public/js/Front/bootstrap.min.js'
					'@IATBundle/Resources/public/js/Front/bootstrap-datepicker.js' %}
		<script src="{{ asset_url }}" type='text/javascript'></script>
	{% endjavascripts %}
	
	<script type="text/javascript">
		$(document).ready(function(){
			if($('.datepicker').val() != ''){
				$('.datepicker').val('');
			}
			
            $('.datepicker').datepicker();

            {% if showThankYouPopup is defined and showThankYouPopup == true %}
            	//$('#myModal').addClass('in');
            	//$('#myModal').show();
            	$('#myModal').modal('show');
            {% endif %}
        });
    </script>
{% endblock javascripts %}
